{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "es6",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": ["dom", "es5", "es2015"],
    "jsx": "preserve",
    "allowJs": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["main.ts", "**/*.ts"],
  "exclude": ["node_modules", "*.test.ts"]
}
